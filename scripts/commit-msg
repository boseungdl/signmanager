#!/bin/sh

# -------------------------------------------------------------
# Git commit-msg 훅: 커밋 메시지 형식 검증
# -------------------------------------------------------------

# LC_ALL 환경 변수 설정 (UTF-8 문자 처리를 위해 필수)
export LC_ALL="C.UTF-8" # Git Bash 환경에 가장 적합
export LANG="C.UTF-8"

COMMIT_MSG_FILE=$1
FIRST_LINE=$(head -n1 "$COMMIT_MSG_FILE")

# --- 디버깅용: 실제 검사 대상 문자열과 길이 출력 ---
echo "--- 디버깅 정보 ---"
echo "검사할 첫 줄: '$FIRST_LINE'"
echo "첫 줄 길이: $(echo -n "$FIRST_LINE" | wc -c) 바이트"
echo "-------------------"
# ---------------------------------------------------

# awk를 사용하여 정규식 매칭을 수행합니다.
# 엄격한 정규식: 타입(첫 글자 대문자), 스코프(선택), 주제(첫 문자는 소문자 알파벳이 아니어야 함, 1-50자), 그리고 (#이슈번호)
# \d 대신 [0-9]를 사용하며, 괄호는 \\로 이스케이프해야 합니다.
if ! echo "$FIRST_LINE" | tr -d '\r' | awk '
BEGIN {
    # 정규식 패턴을 변수로 정의:
    # ^(Feat|Fix|Chore|Docs|Style|Refactor|Test|Build|Ci|Perf|Revert) : 커밋 타입 강제 (첫 글자 대문자!)
    # (\\(.+\\))?     : 스코프 (예: (hook))는 선택 사항
    # :              : 콜론과 공백
    # ([^a-z])       : 주제의 첫 글자는 소문자 알파벳이 아니어야 함 (대문자, 숫자, 한글, 특수문자 등 허용)
    # .{0,49}        : 주제의 나머지 0-49글자 (총 1-50자)
    # \\(#([0-9]+)\\) : (#숫자) 형식의 이슈 번호
    # \\r?$          : 선택적 캐리지 리턴 및 줄의 끝
    regex_pattern = "^(Feat|Fix|Chore|Docs|Style|Refactor|Test|Build|Ci|Perf|Revert)(\\(.+\\))?: ([^a-z]).{0,49} \\(#([0-9]+)\\)\\r?$"
}
{
    if ($0 ~ regex_pattern) {
        exit 0 # 매칭 성공
    } else {
        exit 1 # 매칭 실패
    }
}
'; then
  echo ""
  echo "-------------------------------------------------------------"
  echo "❌ 오류: 유효하지 않은 커밋 메시지 형식입니다."
  echo "컨벤셔널 커밋 규칙에 따라 이슈 번호를 포함하여 작성해 주세요."
  echo ""
  echo "예시:"
  echo "  Feat(인증): 사용자 로그인 엔드포인트 추가 (#123)" # 예시도 변경
  echo "  Fix: 데이터베이스 연결 문제 해결 (#456)"       # 예시도 변경
  echo ""
  echo "허용되는 타입: Feat, Fix, Chore, Docs, Style, Refactor, Test, Build, Ci, Perf, Revert (첫 글자 대문자)"
  echo "형식: <타입>(<범위>): <주제> (#이슈번호)"
  echo "주제 길이: 1-50자, 첫 문자는 소문자 알파벳이 아니어야 합니다."
  echo "-------------------------------------------------------------"
  echo ""
  exit 1
fi

exit 0